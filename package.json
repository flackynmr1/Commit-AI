{
  "name": "@neelfrostrain/commit-ai",
  "version": "1.3.2",
  "description": "AI-assisted commit message generator and auto-committer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "commit-ai": "./dist/index.js",
    "git-commit-ai": "./dist/index.js",
    "git-ai": "./bin/commit-ai.exe"
  },
  "scripts": {
    "start": "bun run index.ts",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "build-exe": "bun build ./src/index.ts --compile --outfile ./bin/commit-ai.exe",
    "link-cmd": "bun link && bun link commit-ai",
    "full-build": "bun run build && bun run build-exe && npm link --force"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NeelFrostrain/Commit-AI.git"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "llm",
    "groq",
    "cli",
    "committer"
  ],
  "author": "Neel Frostrain",
  "license": "MIT",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^13.0.0",
    "dotenv": "^17.2.3",
    "groq-sdk": "^0.37.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5"
  }
}
